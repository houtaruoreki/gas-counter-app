<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GasCounterApp.Views.AddCounterPage"
             Title="рЃЏрЃарЃўрЃфрЃ«рЃЋрЃћрЃџрЃўрЃА рЃЊрЃљрЃЏрЃљрЃбрЃћрЃЉрЃљ">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Location Info -->
            <Frame BorderColor="{DynamicResource Primary}"
                   CornerRadius="10"
                   Padding="15"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="рЃЏрЃЊрЃћрЃЉрЃљрЃарЃћрЃЮрЃЉрЃљ"
                           FontSize="16"
                           FontAttributes="Bold"/>
                    <Label x:Name="LatitudeLabel"
                           Text="рЃњрЃарЃФрЃћрЃЊрЃў: -"
                           FontSize="14"/>
                    <Label x:Name="LongitudeLabel"
                           Text="рЃњрЃљрЃюрЃћрЃЊрЃў: -"
                           FontSize="14"/>
                    <Label x:Name="AccuracyLabel"
                           Text="рЃАрЃўрЃќрЃБрЃАрЃбрЃћ: -"
                           FontSize="14"
                           TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray300}}"/>

                    <Button x:Name="PickLocationButton"
                            Text="­ЪЊЇ рЃљрЃарЃЕрЃћрЃЋрЃљ рЃарЃБрЃЎрЃљрЃќрЃћ"
                            BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                            TextColor="{DynamicResource Primary}"
                            FontSize="14"
                            HeightRequest="40"
                            CornerRadius="8"
                            Clicked="OnPickLocationClicked"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Counter ID (Optional) -->
            <Label Text="рЃЏрЃарЃўрЃфрЃ«рЃЋрЃћрЃџрЃўрЃА ID (рЃљрЃарЃљрЃАрЃљрЃЋрЃљрЃџрЃЊрЃћрЃЉрЃБрЃџрЃЮ)"
                   FontSize="14"/>
            <Entry x:Name="CounterIdEntry"
                   Placeholder="рЃЏрЃљрЃњ: 12345"
                   Keyboard="Text"/>

            <!-- Customer Name (Optional) -->
            <Label Text="рЃљрЃЉрЃЮрЃюрЃћрЃюрЃбрЃўрЃА рЃАрЃљрЃ«рЃћрЃџрЃў (рЃљрЃарЃљрЃАрЃљрЃЋрЃљрЃџрЃЊрЃћрЃЉрЃБрЃџрЃЮ)"
                   FontSize="14"/>
            <Entry x:Name="CustomerNameEntry"
                   Placeholder="рЃЏрЃљрЃњ: рЃњрЃўрЃЮрЃарЃњрЃў рЃњрЃћрЃџрЃљрЃерЃЋрЃўрЃџрЃў"
                   Keyboard="Text"/>

            <!-- Street Name (Optional) -->
            <Label Text="рЃЦрЃБрЃЕрЃўрЃА рЃАрЃљрЃ«рЃћрЃџрЃў (рЃљрЃарЃљрЃАрЃљрЃЋрЃљрЃџрЃЊрЃћрЃЉрЃБрЃџрЃЮ)"
                   FontSize="14"/>
            <Entry x:Name="StreetNameEntry"
                   Placeholder="рЃЏрЃљрЃњ: рЃарЃБрЃАрЃЌрЃљрЃЋрЃћрЃџрЃўрЃА рЃњрЃљрЃЏрЃќрЃўрЃарЃў"
                   Keyboard="Text"/>

            <!-- State/Condition -->
            <Label Text="рЃЏрЃЊрЃњрЃЮрЃЏрЃљрЃарЃћрЃЮрЃЉрЃљ (рЃљрЃарЃљрЃАрЃљрЃЋрЃљрЃџрЃЊрЃћрЃЉрЃБрЃџрЃЮ)"
                   FontSize="14"/>
            <Picker x:Name="StatePicker"
                    Title="рЃљрЃўрЃарЃЕрЃўрЃћрЃЌ рЃЏрЃЊрЃњрЃЮрЃЏрЃљрЃарЃћрЃЮрЃЉрЃљ">
                <Picker.Items>
                    <x:String>рЃюрЃЮрЃарЃЏрЃљрЃџрЃБрЃарЃў</x:String>
                    <x:String>рЃњрЃљрЃЪрЃЮрЃюрЃЋрЃљ</x:String>
                    <x:String>рЃАрЃљрЃГрЃўрЃарЃЮрЃћрЃЉрЃА рЃарЃћрЃЏрЃЮрЃюрЃбрЃА</x:String>
                    <x:String>рЃЊрЃљрЃќрЃўрЃљрЃюрЃћрЃЉрЃБрЃџрЃў</x:String>
                    <x:String>рЃерЃћрЃАрЃљрЃюрЃљрЃгрЃљрЃЋрЃў</x:String>
                </Picker.Items>
            </Picker>

            <!-- Notes -->
            <Label Text="рЃерЃћрЃюрЃўрЃерЃЋрЃюрЃћрЃЉрЃў (рЃљрЃарЃљрЃАрЃљрЃЋрЃљрЃџрЃЊрЃћрЃЉрЃБрЃџрЃЮ)"
                   FontSize="14"/>
            <Editor x:Name="NotesEditor"
                    Placeholder="рЃЊрЃљрЃЏрЃљрЃбрЃћрЃЉрЃўрЃЌрЃў рЃўрЃюрЃцрЃЮрЃарЃЏрЃљрЃфрЃўрЃљ..."
                    HeightRequest="100"/>

            <!-- Save Button -->
            <Button x:Name="SaveButton"
                    Text="рЃерЃћрЃюрЃљрЃ«рЃЋрЃљ"
                    BackgroundColor="{DynamicResource Primary}"
                    TextColor="White"
                    FontSize="16"
                    FontAttributes="Bold"
                    HeightRequest="50"
                    CornerRadius="10"
                    Margin="0,20,0,0"
                    Clicked="OnSaveClicked"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
